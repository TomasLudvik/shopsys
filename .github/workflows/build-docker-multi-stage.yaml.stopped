on: [push]
name: Build dockerized app
jobs:
    install:
        runs-on: ubuntu-latest
        steps:
            -   uses: actions/checkout@master
            -   run: echo 1 | ./project-base/scripts/install.sh
    standards:
        runs-on: ubuntu-latest
        needs: install
        steps:
          -   run: docker-compose exec php-fpm ./phing standards
